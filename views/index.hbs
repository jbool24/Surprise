<div class="card-panel hoverable">
    <div class="row">
        <form class="col s12" action="/authenticate" method="post">
            <div class="row">
                <div class="input-field col s6">
                    <input id="user_name" name="email" type="text" class="validate" placeholder="Email">
                </div>
                <div class="input-field col s6">
                    <input id="password" name="password" type="text" class="validate" placeholder="Password">
                </div>
            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action" id="loginForm">Log in
                <i class="material-icons right">perm_identity</i>
            </button>
        </form>
    </div>

    <div class="row">
        <p> Not yet registered? Please sign up: </p>
            <a class="btn waves-effect waves-light" href="/signup">Sign up
                <i class="material-icons right">input</i>
            </a>
    </div>
</div>
