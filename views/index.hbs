<div class="card-panel hoverable">
    <div class="row">

        <form class="col s12" action="/authenticate" method="POST">
            <div class="row">
                <div class="input-field col s6">
                    <input id="email" type="text" class="validate" name="email" placeholder="Email">
                    <label for="email">{{Email}}</label>
                </div>
                <div class="input-field col s6">
                    <input id="password" type="text" class="validate" name="password" placeholder="Password">
                    <label for="passowrd">{{Password}}</label>
                </div>
                <button class="btn waves-effect waves-light" type="submit" name="action" id="loginForm">Log in
                  <i class="material-icons right">perm_identity</i>
                </button>
            </div>
        </form>
    </div>

    <div class="row">
        <p> Not yet registered? Please sign up: </p>
        <a class="btn waves-effect waves-light" href="/signup">Sign up
          <i class="material-icons right">input</i>
        </a>
    </div>
</div>
